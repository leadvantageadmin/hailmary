# Web Service Environment Configuration
# Copy this file to .env and update with your values

# Application Configuration
NODE_ENV=production
WEB_PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration (Local)
DATABASE_URL=postgresql://app:app@localhost:5433/app

# Database Configuration (VM)
# DATABASE_URL=postgresql://app:app@hailmary-postgres:5432/app

# Elasticsearch Configuration (Local)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=company_prospect_view

# Elasticsearch Configuration (VM)
# ELASTICSEARCH_URL=http://hailmary-elasticsearch:9200

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6390

# Redis Configuration (VM)
# REDIS_URL=redis://hailmary-services-redis:6389

# Schema Service Configuration
SCHEMA_VERSION=latest
SCHEMA_API_URL=http://localhost:3001

# Schema Service Configuration (VM)
# SCHEMA_API_URL=http://hailmary-schema-api:3001

# Authentication Configuration
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Timezone
TZ=UTC

# Logging Configuration
WEB_LOGS_PATH=./logs/web
SCHEMA_DATA_PATH=./data/schema

# Deployment Mode (for VM deployment)
DEPLOYMENT_MODE=local

# Optional: Development Configuration
# NODE_ENV=development
# DEBUG=*
