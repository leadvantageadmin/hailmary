# GCP Environment Configuration
# Copy this file to .env and update with your actual values

# GCP Project Configuration
GCP_PROJECT_ID=leadvantage-global
GCP_REGION=us-central1

# Database Configuration (Cloud SQL)
DATABASE_URL=postgresql://app:your-secure-password@/hailmary_db?host=/cloudsql/your-project:region:instance-name
POSTGRES_DSN=postgresql://app:your-secure-password@/hailmary_db?host=/cloudsql/your-project:region:instance-name

# Redis Configuration (Cloud Memorystore)
REDIS_URL=redis://your-redis-ip:6379

# OpenSearch Configuration
OPENSEARCH_URL=http://your-opensearch-url:9200
OS_URL=http://your-opensearch-url:9200

# Application Configuration
NODE_ENV=production
OPENSEARCH_INDEX=customers

# Security
DATABASE_PASSWORD=your-secure-password
